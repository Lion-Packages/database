{
    "name": "lion/database",
    "description": "Package in charge of the generation and execution of processes with databases",
    "type": "library",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/lion-packages/database/issues",
        "source": "https://github.com/lion-packages/database"
    },
    "autoload": {
        "psr-4": {
            "Lion\\Database\\": "src/LionDatabase/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.3"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "lion/test": "^2.0",
        "phpunit/phpunit": "^11.1"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
